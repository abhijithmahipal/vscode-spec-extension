{
  "name": "spec-driven-development",
  "displayName": "Spec-Driven Development",
  "description": "Systematic feature development with requirements, design, and implementation planning for GitHub Copilot",
  "version": "1.0.0",
  "publisher": "spec-dev-tools",
  "author": {
    "name": "Spec Development Tools",
    "email": "contact@spec-dev-tools.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spec-dev-tools/vscode-spec-driven-development"
  },
  "bugs": {
    "url": "https://github.com/spec-dev-tools/vscode-spec-driven-development/issues"
  },
  "homepage": "https://github.com/spec-dev-tools/vscode-spec-driven-development#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other", "Education", "Snippets"],
  "keywords": [
    "spec",
    "requirements",
    "design",
    "planning",
    "workflow",
    "copilot",
    "github-copilot",
    "development",
    "methodology",
    "documentation",
    "project-management",
    "agile"
  ],
  "icon": "resources/icons/spec-icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "qna": "marketplace",
  "sponsor": {
    "url": "https://github.com/sponsors/spec-dev-tools"
  },

  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "specMode.start",
        "title": "üöÄ Start New Spec",
        "category": "Spec",
        "icon": "$(add)"
      },
      {
        "command": "specMode.nextPhase",
        "title": "‚û°Ô∏è Next Phase",
        "category": "Spec",
        "icon": "$(arrow-right)"
      },
      {
        "command": "specMode.executeTask",
        "title": "‚ñ∂Ô∏è Execute Task",
        "category": "Spec",
        "icon": "$(play)"
      },
      {
        "command": "specMode.refresh",
        "title": "üîÑ Refresh",
        "category": "Spec",
        "icon": "$(refresh)"
      },
      {
        "command": "specMode.openFile",
        "title": "üìÑ Open File",
        "category": "Spec",
        "icon": "$(go-to-file)"
      },
      {
        "command": "specMode.markComplete",
        "title": "‚úÖ Mark Complete",
        "category": "Spec",
        "icon": "$(check)"
      },
      {
        "command": "specMode.copyPrompts",
        "title": "üìã Copy Prompts",
        "category": "Spec",
        "icon": "$(clippy)"
      },
      {
        "command": "specMode.showGuidance",
        "title": "üí° Get Guidance",
        "category": "Spec",
        "icon": "$(lightbulb)"
      },
      {
        "command": "specMode.showAllTasks",
        "title": "üìã Show All Tasks",
        "category": "Spec",
        "icon": "$(list-unordered)"
      },
      {
        "command": "specMode.openSettings",
        "title": "‚öôÔ∏è Settings",
        "category": "Spec",
        "icon": "$(settings-gear)"
      }
    ],
    "views": {
      "spec-container": [
        {
          "id": "specPanel",
          "name": "Spec Workflow",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "spec-container",
          "title": "Spec Development",
          "icon": "$(notebook)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "specMode.start",
          "when": "view == specPanel && !specMode.active",
          "group": "navigation"
        },
        {
          "command": "specMode.refresh",
          "when": "view == specPanel",
          "group": "navigation"
        },
        {
          "command": "specMode.copyPrompts",
          "when": "view == specPanel && specMode.active",
          "group": "navigation"
        },
        {
          "command": "specMode.showGuidance",
          "when": "view == specPanel",
          "group": "navigation"
        },
        {
          "command": "specMode.openSettings",
          "when": "view == specPanel",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "specMode.executeTask",
          "when": "view == specPanel && viewItem == task-incomplete",
          "group": "inline"
        },
        {
          "command": "specMode.markComplete",
          "when": "view == specPanel && viewItem == task-incomplete",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Spec-Driven Development",
      "properties": {
        "specDrivenDevelopment.workflowBehavior.requirePhaseConfirmation": {
          "type": "boolean",
          "default": true,
          "description": "Show confirmation dialog before transitioning between phases"
        },
        "specDrivenDevelopment.workflowBehavior.autoSaveOnPhaseTransition": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save files when transitioning between phases"
        },
        "specDrivenDevelopment.workflowBehavior.showDetailedProgress": {
          "type": "boolean",
          "default": true,
          "description": "Show detailed progress indicators and task completion status"
        },
        "specDrivenDevelopment.uiPreferences.compactMode": {
          "type": "boolean",
          "default": false,
          "description": "Use compact layout to save space"
        },
        "specDrivenDevelopment.uiPreferences.showTooltips": {
          "type": "boolean",
          "default": true,
          "description": "Show helpful tooltips on hover"
        },
        "specDrivenDevelopment.uiPreferences.animateTransitions": {
          "type": "boolean",
          "default": true,
          "description": "Enable smooth animations for UI transitions"
        },
        "specDrivenDevelopment.integration.copilotPromptStyle": {
          "type": "string",
          "enum": ["detailed", "concise"],
          "default": "detailed",
          "description": "Style of prompts generated for GitHub Copilot"
        },
        "specDrivenDevelopment.integration.fileNamingConvention": {
          "type": "string",
          "enum": ["kebab-case", "snake_case", "camelCase"],
          "default": "kebab-case",
          "description": "Naming convention for generated spec files"
        },
        "specDrivenDevelopment.notifications.showSuccessMessages": {
          "type": "boolean",
          "default": true,
          "description": "Show success notifications for completed actions"
        },
        "specDrivenDevelopment.notifications.showProgressNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show progress notifications during long operations"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}